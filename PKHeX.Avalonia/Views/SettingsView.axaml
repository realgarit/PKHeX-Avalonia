<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            <TextBlock Text="Settings" FontSize="28" FontWeight="Light" Margin="0,0,0,12"/>

            <!-- Backup Settings Card -->
            <Border Classes="section-card" Padding="20" CornerRadius="8">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸ’¾" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Backups" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Backups" FontWeight="Medium"/>
                            <TextBlock Text="Automatically create a backup when saving." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding BakEnabled}" OnContent="On" OffContent="Off"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Slot Write Settings Card -->
            <Border Classes="section-card" Padding="20" CornerRadius="8">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸ“" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Editor Behavior" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Update PokÃ©dex" FontWeight="Medium"/>
                            <TextBlock Text="Automatically update the Save File's PokÃ©dex when injecting a PKM." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding SetUpdateDex}" OnContent="On" OffContent="Off"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Adapt PKM to Save" FontWeight="Medium"/>
                            <TextBlock Text="Automatically adapt PKM info to the Save File (Handler, Format)." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding SetUpdatePKM}" OnContent="On" OffContent="Off"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                             <TextBlock Text="Warn if closing modified" FontWeight="Medium"/>
                             <TextBlock Text="Warn when closing the editor if changes are unsaved."
                                        FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding ModifyUnset}" OnContent="On" OffContent="Off"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Privacy Settings Card -->
            <Border Classes="section-card" Padding="20" CornerRadius="8">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸ”’" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Privacy" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Hide Save Details" FontWeight="Medium"/>
                            <TextBlock Text="Hide save file details in the program title." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding HideSAVDetails}" OnContent="On" OffContent="Off"/>
                    </Grid>
                    
                     <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Hide Secret Details" FontWeight="Medium"/>
                            <TextBlock Text="Hide secret IDs and other sensitive info in editors." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding HideSecretDetails}" OnContent="On" OffContent="Off"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Legality/Advanced Settings Card -->
             <Border Classes="section-card" Padding="20" CornerRadius="8">
                <StackPanel Spacing="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="âš–ï¸" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Legality / Advanced" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Word Filter Check" FontWeight="Medium"/>
                            <TextBlock Text="Check for offensive words/names." 
                                       FontSize="12" Opacity="0.6" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding WordFilterCheck}" OnContent="On" OffContent="Off"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Button Content="Save Changes" 
                    Command="{Binding SaveCommand}" 
                    Classes="accent"
                    HorizontalAlignment="Right" 
                    Padding="24,12"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
