<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="PKHeX.Avalonia.Views.BoxExporter"
             x:DataType="vm:BoxExporterViewModel">

    <Grid RowDefinitions="Auto, *, Auto" Margin="10">
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Box Exporter" FontSize="18" FontWeight="Bold"/>

            <TextBlock Text="File Namer:"/>
            <ComboBox ItemsSource="{Binding NamerList}" SelectedItem="{Binding SelectedNamer}" HorizontalAlignment="Stretch"/>
            
            <!-- Additional settings could go here -->
            <!-- e.g. CheckBox for 'Modify dates', etc. -->
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Cancel" Command="{Binding CloseRequested}"/>
            <Button Content="Export" Command="{Binding ExportCommand}" Classes="accent"/>
        </StackPanel>
    </Grid>
</UserControl>
