<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.ZygardeCellEditor"
             x:DataType="vm:ZygardeCellEditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Zygarde Cells not available" FontSize="18" HorizontalAlignment="Center" Opacity="0.7" />
                <TextBlock Text="This feature is only available for Sun/Moon and Ultra Sun/Ultra Moon." HorizontalAlignment="Center" Opacity="0.5" Margin="0,8,0,0" />
            </StackPanel>

            <DockPanel IsVisible="{Binding IsSupported}">
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Zygarde Cell Editor" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Collect All" Command="{Binding CollectAllCommand}" Padding="12,6" />
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="12,6" />
                    </StackPanel>
                </DockPanel>

                <!-- Totals -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="16" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Cells Total:" VerticalAlignment="Center" />
                        <NumericUpDown Value="{Binding CellsTotal}" Minimum="0" Maximum="999" Width="100" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Cells Collected:" VerticalAlignment="Center" />
                        <NumericUpDown Value="{Binding CellsCollected}" Minimum="0" Maximum="999" Width="100" />
                    </StackPanel>
                </StackPanel>

                <!-- Cell List -->
                <Border Classes="section-card" CornerRadius="4" Padding="8">
                    <ListBox ItemsSource="{Binding Cells}" MaxHeight="400">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:ZygardeCellViewModel">
                                <Grid ColumnDefinitions="50,*,120" Margin="4">
                                    <TextBlock Text="{Binding Index, StringFormat='#{0}'}" VerticalAlignment="Center" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="{Binding Location}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip.Tip="{Binding Location}" />
                                    <ComboBox Grid.Column="2" SelectedIndex="{Binding State}" Width="110">
                                        <ComboBoxItem Content="None" />
                                        <ComboBoxItem Content="Available" />
                                        <ComboBoxItem Content="Received" />
                                    </ComboBox>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
