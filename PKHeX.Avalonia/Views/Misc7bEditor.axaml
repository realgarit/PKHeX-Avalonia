<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Misc7bEditor"
             x:DataType="vm:Misc7bEditorViewModel">

    <Design.DataContext>
        <vm:Misc7bEditorViewModel />
    </Design.DataContext>

    <Border Padding="16" Classes="view-container">
        <Grid RowDefinitions="*,Auto">
            <ScrollViewer>
                <StackPanel Spacing="16" Margin="0,8,0,0">
                    <!-- Trainer Info -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Trainer Info" FontWeight="SemiBold" Opacity="0.6" />
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,8,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Money" VerticalAlignment="Center" Width="80" />
                                <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Money}" Minimum="0" Maximum="9999999" ShowButtonSpinner="False" />
                                <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxMoneyCommand}" Margin="8,0,0,0" Padding="8,4" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Rival Name" VerticalAlignment="Center" />
                                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding RivalName}" MaxLength="12" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Go Park -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="GO Park" FontWeight="SemiBold" Opacity="0.6" />
                            <TextBlock Text="Manage Pokémon transferred from Pokémon GO" FontSize="12" Opacity="0.5" />
                            <Button Content="Delete All GO Park Pokémon" Command="{Binding DeleteAllGoParkCommand}" HorizontalAlignment="Left" />
                        </StackPanel>
                    </Border>

                    <!-- Unlocks -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Unlocks" FontWeight="SemiBold" Opacity="0.6" />
                            <WrapPanel>
                                <Button Content="Unlock All Trainer Titles" Command="{Binding UnlockAllTrainerTitlesCommand}" Margin="0,0,8,8" />
                                <Button Content="Unlock All Fashion" Command="{Binding UnlockAllFashionCommand}" Margin="0,0,8,8" />
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" Spacing="12">
                <Button Content="Save" Command="{Binding SaveCommand}" Classes="accent" MinWidth="100" HorizontalContentAlignment="Center" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>