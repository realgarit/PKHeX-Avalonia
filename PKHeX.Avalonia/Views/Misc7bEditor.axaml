<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Misc7bEditor"
             x:DataType="vm:Misc7bEditorViewModel">

    <Design.DataContext>
        <vm:Misc7bEditorViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <ScrollViewer>
            <StackPanel Spacing="15" Margin="10">
                <!-- Trainer Info -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Trainer Info" FontWeight="Bold" FontSize="14" />
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Money:" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Money}" Minimum="0" Maximum="9999999" Margin="0,0,10,5" />
                            <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxMoneyCommand}" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Rival Name:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding RivalName}" MaxLength="12" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Go Park -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="GO Park" FontWeight="Bold" FontSize="14" />
                        <TextBlock Text="Manage Pokémon transferred from Pokémon GO" FontSize="12" Foreground="Gray" />
                        <Button Content="Delete All GO Park Pokémon" Command="{Binding DeleteAllGoParkCommand}" />
                    </StackPanel>
                </Border>

                <!-- Unlocks -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Unlocks" FontWeight="Bold" FontSize="14" />
                        <WrapPanel>
                            <Button Content="Unlock All Trainer Titles" Command="{Binding UnlockAllTrainerTitlesCommand}" Margin="0,2,10,2" />
                            <Button Content="Unlock All Fashion" Command="{Binding UnlockAllFashionCommand}" Margin="0,2,10,2" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
