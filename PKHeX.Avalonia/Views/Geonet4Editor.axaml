<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Geonet4Editor"
             x:DataType="vm:Geonet4EditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Geonet not available" FontSize="18" HorizontalAlignment="Center" Opacity="0.7" />
                <TextBlock Text="This feature is only available for Diamond/Pearl/Platinum/HeartGold/SoulSilver." 
                           HorizontalAlignment="Center" Opacity="0.5" Margin="0,8,0,0" TextWrapping="Wrap" />
            </StackPanel>

            <DockPanel IsVisible="{Binding IsSupported}">
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                    <TextBlock Text="Geonet Globe Editor" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                </DockPanel>

                <StackPanel Spacing="16">
                    <Border Classes="section-card" CornerRadius="4" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Globe Location Management" FontWeight="Bold" FontSize="14" />
                            <TextBlock Text="The Geonet Globe displays locations you've connected with via GTS/WiFi. Set points to populate your globe with locations."
                                       TextWrapping="Wrap" Opacity="0.7" />
                            
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                <Button Content="Set All Locations" Command="{Binding SetAllLocationsCommand}" Padding="16,8" />
                                <Button Content="Set Legal Locations Only" Command="{Binding SetAllLegalLocationsCommand}" Padding="16,8" />
                                <Button Content="Clear All" Command="{Binding ClearAllLocationsCommand}" Padding="16,8" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Classes="section-card" CornerRadius="4" Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Options" FontWeight="Bold" FontSize="14" />
                            <CheckBox IsChecked="{Binding GlobalFlag}" Content="Global Flag (allow globe to pan outside Japan in JP games)" />
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Note: Changes are applied when the save file is saved." Opacity="0.5" FontStyle="Italic" />
                </StackPanel>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
