<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             xmlns:core="clr-namespace:PKHeX.Core;assembly=PKHeX.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PKHeX.Avalonia.Views.Pokedex8bEditor"
             x:DataType="vm:Pokedex8bEditorViewModel">
    
    <Border Padding="16" Classes="view-container">
        <Grid ColumnDefinitions="250, 16, *" RowDefinitions="*,Auto">
            <!-- Species List -->
            <Grid Grid.Column="0" RowDefinitions="Auto, 8, *">
                <TextBox Grid.Row="0" Text="{Binding SearchText}" Watermark="Search Species..." />
                <Border Grid.Row="2" Classes="section-card" Padding="0">
                    <ListBox ItemsSource="{Binding FilteredSpecies}" SelectedItem="{Binding SelectedSpecies}" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="core:ComboItem">
                                <TextBlock Text="{Binding Text}" Padding="8,4"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
            
            <!-- Editor Area -->
            <ScrollViewer Grid.Column="2" Grid.Row="0">
                <StackPanel Spacing="16">
                    <!-- Global Settings -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Global" FontWeight="SemiBold" Opacity="0.6" />
                            <StackPanel Orientation="Horizontal" Spacing="24">
                                <CheckBox IsChecked="{Binding HasRegionalDex}" Content="Regional Dex Unlocked"/>
                                <CheckBox IsChecked="{Binding HasNationalDex}" Content="National Dex Unlocked"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Current Entry -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Current Species" FontWeight="SemiBold" Opacity="0.6" />
                            
                            <Grid ColumnDefinitions="Auto, 16, *" RowDefinitions="Auto, 12, Auto">
                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8">
                                    <TextBlock Text="State" FontWeight="SemiBold" Opacity="0.7" />
                                    <ComboBox ItemsSource="{Binding States}" SelectedIndex="{Binding State}" HorizontalAlignment="Stretch" MinWidth="150" />
                                </StackPanel>

                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="*, 16, *">
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Gender Flags" FontWeight="SemiBold" Opacity="0.7" />
                                        <CheckBox IsChecked="{Binding SeenMale}" Content="Male" IsEnabled="{Binding CanBeMale}"/>
                                        <CheckBox IsChecked="{Binding SeenFemale}" Content="Female" IsEnabled="{Binding CanBeFemale}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Spacing="8">
                                        <TextBlock Text="Shiny Flags" FontWeight="SemiBold" Opacity="0.7" />
                                        <CheckBox IsChecked="{Binding SeenShinyMale}" Content="Shiny Male" IsEnabled="{Binding CanBeMale}"/>
                                        <CheckBox IsChecked="{Binding SeenShinyFemale}" Content="Shiny Female" IsEnabled="{Binding CanBeFemale}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Languages -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Languages" FontWeight="SemiBold" Opacity="0.6" />
                            <WrapPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding LangJapanese}" Content="JPN" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangEnglish}" Content="ENG" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangFrench}" Content="FRE" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangItalian}" Content="ITA" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangGerman}" Content="GER" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangSpanish}" Content="SPA" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangKorean}" Content="KOR" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangChineseS}" Content="CHS" Margin="0,0,16,8"/>
                                <CheckBox IsChecked="{Binding LangChineseT}" Content="CHT" Margin="0,0,16,8"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Forms -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Forms" FontWeight="SemiBold" Opacity="0.6" />
                            <Grid ColumnDefinitions="*,80,80">
                                <TextBlock Grid.Column="0" Text="Form" FontWeight="Bold" Opacity="0.7"/>
                                <TextBlock Grid.Column="1" Text="Seen" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.7"/>
                                <TextBlock Grid.Column="2" Text="Shiny" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.7"/>
                            </Grid>
                            <ItemsControl ItemsSource="{Binding Forms}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:Pokedex8bFormViewModel">
                                        <Grid ColumnDefinitions="*,80,80" Margin="0,4">
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            <CheckBox Grid.Column="1" IsChecked="{Binding Seen}" HorizontalAlignment="Center"/>
                                            <CheckBox Grid.Column="2" IsChecked="{Binding SeenShiny}" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Actions -->
            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,16,0,0" HorizontalAlignment="Right">
                <Button Command="{Binding ModifyAllCommand}" CommandParameter="SeenNone" Content="Seen None"/>
                <Button Command="{Binding ModifyAllCommand}" CommandParameter="CaughtNone" Content="Caught None"/>
                <Button Command="{Binding SeenAllCommand}" Content="Seen All"/>
                <Button Command="{Binding CaughtAllCommand}" Content="Caught All"/>
                <Button Command="{Binding CompleteDexCommand}" Content="Complete Dex" Classes="accent"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>