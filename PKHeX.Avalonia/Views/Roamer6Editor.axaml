<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Roamer6Editor"
             x:DataType="vm:Roamer6EditorViewModel">

    <Design.DataContext>
        <vm:Roamer6EditorViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <!-- Use a ScrollViewer for content -->
        <ScrollViewer>
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" 
                    HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="10">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Species:" VerticalAlignment="Center" Margin="0,0,10,10" />
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              ItemsSource="{Binding SpeciesList}" 
                              SelectedIndex="{Binding SelectedSpeciesIndex}" 
                              Margin="0,0,0,10" MinWidth="150" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="State:" VerticalAlignment="Center" Margin="0,0,10,10" />
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                              ItemsSource="{Binding RoamStates}" 
                              SelectedIndex="{Binding RoamStateIndex}" 
                              Margin="0,0,0,10" MinWidth="150" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Encountered:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <NumericUpDown Grid.Row="2" Grid.Column="1" 
                                   Value="{Binding TimesEncountered}" 
                                   Minimum="0" Maximum="255" />
                </Grid>
            </Border>
        </ScrollViewer>
    </DockPanel>
</UserControl>
