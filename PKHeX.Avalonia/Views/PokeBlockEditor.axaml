<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.PokeBlockEditor"
             x:DataType="vm:PokeBlockEditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Pokéblocks not available" FontSize="18" HorizontalAlignment="Center" Opacity="0.7" />
                <TextBlock Text="This feature is only available for Omega Ruby/Alpha Sapphire." HorizontalAlignment="Center" Opacity="0.5" Margin="0,8,0,0" />
            </StackPanel>

            <DockPanel IsVisible="{Binding IsSupported}">
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Pokéblock Editor (ORAS)" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Give All (999)" Command="{Binding GiveAllCommand}" Padding="12,6" />
                        <Button Content="Clear All" Command="{Binding ClearAllCommand}" Padding="12,6" />
                    </StackPanel>
                </DockPanel>

                <Border Classes="section-card" CornerRadius="4" Padding="16">
                    <ItemsControl ItemsSource="{Binding Blocks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:PokeBlockSlotViewModel">
                                <Border Margin="4" Padding="12" CornerRadius="4"
                                        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                        Width="180">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Column="1" Value="{Binding Count}" Minimum="0" Maximum="999" Width="80" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
