<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.EventFlagsEditor"
             x:DataType="vm:EventFlagsEditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <!-- Not supported message -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Event Flags not available"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
                <TextBlock Text="This save type does not support event flag editing."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Main editor -->
            <DockPanel IsVisible="{Binding IsSupported}">
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Event Flags" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding FlagCount, StringFormat='({0} flags)'}"
                               VerticalAlignment="Center"
                               Opacity="0.6"
                               Margin="8,0,0,0" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Reset" Command="{Binding ResetCommand}" Padding="12,6" />
                        <Button Content="Apply" Command="{Binding SaveCommand}" Classes="accent" Padding="12,6" />
                    </StackPanel>
                </DockPanel>

                <!-- Quick Flag Access -->
                <Border DockPanel.Dock="Top"
                        Classes="section-card"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock Text="Flag #" VerticalAlignment="Center" FontWeight="SemiBold" Opacity="0.7" />
                        <NumericUpDown Value="{Binding SelectedFlagIndex}"
                                       Minimum="0"
                                       Maximum="{Binding FlagCount}"
                                       MinWidth="120"
                                       FormatString="0"
                                       ShowButtonSpinner="False" />
                        <CheckBox IsChecked="{Binding SelectedFlagValue}"
                                  Content="Set"
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold" />
                    </StackPanel>
                </Border>

                <!-- Toolbar -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                    <Button Content="Set All" Command="{Binding SetAllCommand}" Padding="8,4" />
                    <Button Content="Clear All" Command="{Binding ClearAllCommand}" Padding="8,4" />
                    <TextBox Text="{Binding SearchText}"
                             Watermark="Search by index..."
                             Width="200" />
                </StackPanel>

                <!-- Flags List -->
                <Border Classes="section-card"
                        CornerRadius="4">
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding FilteredFlags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:EventFlagViewModel">
                                    <Border Padding="4" Margin="2">
                                        <CheckBox IsChecked="{Binding IsSet}"
                                                  Content="{Binding Index}"
                                                  ToolTip.Tip="{Binding HexIndex}"
                                                  MinWidth="70" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
