<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.DatabaseEditor"
             x:DataType="vm:DatabaseEditorViewModel">

    <DockPanel Margin="10">
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Spacing="8">
                <TextBlock Text="PKM Database" FontWeight="Bold" FontSize="14" />
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto">
                    <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox Grid.Column="1" Text="{Binding SearchText}" Watermark="Species, OT, etc..." Margin="0,0,10,0" />
                    <Button Grid.Column="2" Content="Search" Command="{Binding SearchCommand}" Margin="0,0,5,0" />
                    <Button Grid.Column="3" Content="Clear" Command="{Binding ClearCommand}" />
                </Grid>
                <TextBlock Text="{Binding ResultCount, StringFormat='Results: {0}'}" FontSize="12" Foreground="Gray" />
            </StackPanel>
        </Border>

        <ListBox ItemsSource="{Binding Results}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Display}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
