<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.EncountersEditor"
             x:DataType="vm:EncountersEditorViewModel">

    <DockPanel Margin="10">
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Spacing="8">
                <TextBlock Text="Encounter Database" FontWeight="Bold" FontSize="14" />
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto">
                    <TextBlock Grid.Column="0" Text="Species:" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ComboBox Grid.Column="1" ItemsSource="{Binding Species}" SelectedIndex="{Binding SelectedSpecies}" DisplayMemberBinding="{Binding Text}" Margin="0,0,10,0" />
                    <Button Grid.Column="2" Content="Search" Command="{Binding SearchEncountersCommand}" Margin="0,0,5,0" />
                    <Button Grid.Column="3" Content="Reset" Command="{Binding ResetCommand}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
            <TextBlock Text="{Binding SearchResults}" TextWrapping="Wrap" />
        </Border>
    </DockPanel>
</UserControl>
