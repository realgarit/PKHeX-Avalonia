<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Misc8Editor"
             x:DataType="vm:Misc8EditorViewModel">

    <Design.DataContext>
        <vm:Misc8EditorViewModel />
    </Design.DataContext>

    <Border Padding="16" Classes="view-container">
        <Grid RowDefinitions="*,Auto">
            <ScrollViewer>
                <StackPanel Spacing="16" Margin="0,8,0,0">
                    <!-- Currency -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Currency" FontWeight="SemiBold" Opacity="0.6" />
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,8,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Watts" VerticalAlignment="Center" Width="60" />
                                <NumericUpDown Grid.Row="0" Grid.Column="1" 
                                               Value="{Binding Watts}" 
                                               Minimum="0" Maximum="9999999" ShowButtonSpinner="False" />
                                <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxWattsCommand}" Margin="8,0,0,0" Padding="8,4" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="BP" VerticalAlignment="Center" />
                                <NumericUpDown Grid.Row="2" Grid.Column="1" 
                                               Value="{Binding Bp}" 
                                               Minimum="0" Maximum="9999" ShowButtonSpinner="False" />
                                <Button Grid.Row="2" Grid.Column="2" Content="Max" Command="{Binding MaxBPCommand}" Margin="8,0,0,0" Padding="8,4" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Battle Tower -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Battle Tower" FontWeight="SemiBold" Opacity="0.6" />
                            <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,8,Auto,8,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Wins" FontWeight="SemiBold" Opacity="0.7" HorizontalAlignment="Center" />
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Streak" FontWeight="SemiBold" Opacity="0.7" HorizontalAlignment="Center" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Singles" VerticalAlignment="Center" Width="80" />
                                <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding SinglesWins}" Minimum="0" Maximum="9999999" ShowButtonSpinner="False" Margin="0,0,8,0" />
                                <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding SinglesStreak}" Minimum="0" Maximum="300" ShowButtonSpinner="False" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Doubles" VerticalAlignment="Center" />
                                <NumericUpDown Grid.Row="4" Grid.Column="1" Value="{Binding DoublesWins}" Minimum="0" Maximum="9999999" ShowButtonSpinner="False" Margin="0,0,8,0" />
                                <NumericUpDown Grid.Row="4" Grid.Column="2" Value="{Binding DoublesStreak}" Minimum="0" Maximum="300" ShowButtonSpinner="False" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Unlocks -->
                    <Border Classes="section-card" Padding="12">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Unlocks" FontWeight="SemiBold" Opacity="0.6" />
                            <WrapPanel>
                                <Button Content="Unlock All Fashion (Legal)" Command="{Binding UnlockAllFashionCommand}" Margin="0,0,8,8" />
                                <Button Content="Collect All Diglett" Command="{Binding CollectAllDiglettCommand}" IsVisible="{Binding IsIoA}" Margin="0,0,8,8" />
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" Spacing="12">
                <Button Content="Save" Command="{Binding SaveCommand}" Classes="accent" MinWidth="100" HorizontalContentAlignment="Center" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>