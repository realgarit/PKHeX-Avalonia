<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Misc8Editor"
             x:DataType="vm:Misc8EditorViewModel">

    <Design.DataContext>
        <vm:Misc8EditorViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <ScrollViewer>
            <StackPanel Spacing="15" Margin="10">
                <!-- Currency -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Currency" FontWeight="Bold" FontSize="14" />
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Watts:" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Watts}" Minimum="0" Maximum="9999999" Margin="0,0,10,5" />
                            <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxWattsCommand}" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="BP:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding Bp}" Minimum="0" Maximum="9999" Margin="0,0,10,0" />
                            <Button Grid.Row="1" Grid.Column="2" Content="Max" Command="{Binding MaxBPCommand}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Battle Tower -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Battle Tower" FontWeight="Bold" FontSize="14" />
                        <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Wins" FontWeight="SemiBold" Margin="5" HorizontalAlignment="Center" />
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Streak" FontWeight="SemiBold" Margin="5" HorizontalAlignment="Center" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Singles:" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding SinglesWins}" Minimum="0" Maximum="9999999" Margin="5,0,5,5" />
                            <NumericUpDown Grid.Row="1" Grid.Column="2" Value="{Binding SinglesStreak}" Minimum="0" Maximum="300" Margin="5,0,0,5" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Doubles:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding DoublesWins}" Minimum="0" Maximum="9999999" Margin="5,0,5,0" />
                            <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding DoublesStreak}" Minimum="0" Maximum="300" Margin="5,0,0,0" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Unlocks -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Unlocks" FontWeight="Bold" FontSize="14" />
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button Content="Unlock All Fashion (Legal)" Command="{Binding UnlockAllFashionCommand}" />
                            <Button Content="Collect All Diglett" Command="{Binding CollectAllDiglettCommand}" IsVisible="{Binding IsIoA}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
