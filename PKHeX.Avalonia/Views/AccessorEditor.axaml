<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.AccessorEditor"
             x:DataType="vm:AccessorEditorViewModel">

    <DockPanel Margin="10">
        <StackPanel IsVisible="{Binding !IsSupported}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="This save file does not support Block Accessor." Foreground="Red" />
        </StackPanel>

        <Grid IsVisible="{Binding IsSupported}" ColumnDefinitions="200,*" RowDefinitions="*">
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Blocks" FontWeight="Bold" Margin="0,0,0,5" />
                    <ListBox ItemsSource="{Binding BlockKeys}" SelectedItem="{Binding SelectedKey}" />
                </DockPanel>
            </Border>

            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                <StackPanel Spacing="10">
                    <TextBlock Text="Block Details" FontWeight="Bold" FontSize="14" />
                    <TextBlock Text="{Binding BlockDetails}" FontFamily="Consolas" />
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
