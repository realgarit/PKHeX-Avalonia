<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.RaidSevenStar9Editor"
             x:DataType="vm:RaidSevenStar9EditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding !IsSupported}">
                <TextBlock Text="7-Star Raids not available" FontSize="18" HorizontalAlignment="Center" Opacity="0.7" />
                <TextBlock Text="This feature is only available for PokÃ©mon Scarlet/Violet." 
                           HorizontalAlignment="Center" Opacity="0.5" Margin="0,8,0,0" />
            </StackPanel>

            <DockPanel IsVisible="{Binding IsSupported}">
                <TextBlock DockPanel.Dock="Top" Text="7-Star Tera Raid Editor" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16" />

                <Grid ColumnDefinitions="200,*">
                    <Border Classes="section-card" CornerRadius="4" Padding="8">
                        <ListBox ItemsSource="{Binding RaidItems}" SelectedItem="{Binding SelectedRaid}" MaxHeight="400">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="vm:RaidSevenStarItem">
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <Border Grid.Column="1" Classes="section-card" 
                            CornerRadius="4" Padding="16" Margin="16,0,0,0">
                        <StackPanel DataContext="{Binding SelectedRaid}" Spacing="12">
                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16" />
                            <CheckBox IsChecked="{Binding Captured}" Content="Captured" />
                            <CheckBox IsChecked="{Binding Defeated}" Content="Defeated" />
                        </StackPanel>
                    </Border>
                </Grid>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
