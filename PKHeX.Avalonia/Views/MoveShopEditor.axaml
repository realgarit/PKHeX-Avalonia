<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="PKHeX.Avalonia.Views.MoveShopEditor"
             x:DataType="vm:MoveShopEditorViewModel">

    <Grid RowDefinitions="*, Auto" Margin="10">
        <DataGrid Grid.Row="0" ItemsSource="{Binding Moves}" CanUserSortColumns="True" IsReadOnly="False"
                  GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index" Binding="{Binding IndexDisplay}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" Width="150"/>
                <DataGridCheckBoxColumn Header="Purchased" Binding="{Binding IsPurchased}" Width="80"/>
                <DataGridCheckBoxColumn Header="Mastered" Binding="{Binding IsMastered}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Give All" Command="{Binding SetAllCommand}"/>
            <Button Content="Remove All" Command="{Binding SetNoneCommand}"/>
            <Button Content="Cancel" Command="{Binding CloseRequested}"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Classes="accent"/>
        </StackPanel>
    </Grid>
</UserControl>
