<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.PokemonEditor"
             x:DataType="vm:PokemonEditorViewModel"
             MinHeight="480"
             Focusable="False"
             KeyboardNavigation.IsTabStop="False">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SystemControlFocusVisualPrimaryBrush" Color="Transparent" />
        <SolidColorBrush x:Key="SystemControlFocusVisualSecondaryBrush" Color="Transparent" />
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Nuking the yellow focus border locally for this view -->
        <Style Selector="Border">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>
        <Style Selector="Button">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>
        <Style Selector="ContentControl">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>
    </UserControl.Styles>

        <Border Padding="6" Classes="view-container">

            <DockPanel>

                <!-- Header Section: Redesigned (No wrapping border) -->

                <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" Margin="4,0,4,12">

                    <!-- Left: Sprite Card -->

                    <Border Grid.Column="0"

                            Background="{DynamicResource ThemeBackgroundCardBrush}"

                            BorderBrush="{DynamicResource ThemeBorderDefaultBrush}"

                            BorderThickness="1"

                            CornerRadius="8"

                            Width="80" Height="68"

                            BoxShadow="0 2 8 0 #00000020">

                        <Panel>

                            <Image Source="{Binding Sprite}"

                                   Width="64" Height="52"

                                   RenderOptions.BitmapInterpolationMode="HighQuality"

                                   HorizontalAlignment="Center"

                                   VerticalAlignment="Center" />

                                                    <!-- Illegal Warning -->

                                                    <Path Data="M 8,0 L 16,14 L 0,14 Z M 8.5,12 H 7.5 V 10.5 H 8.5 V 12 Z M 8.5,9 H 7.5 V 4.5 H 8.5 V 9 Z" 

                                                          Fill="#E3350D" 

                                                          HorizontalAlignment="Right" 

                                                          VerticalAlignment="Top"

                                                          IsVisible="{Binding !IsLegal}"

                                                          Width="12" Height="10"/>

                                                </Panel>

                                            </Border>

    

                    <!-- Right: Info & Actions -->

                    <Grid Grid.Column="1" RowDefinitions="*,*" Margin="12,0,0,0">

                        <!-- Top: Title and Actions -->

                        <DockPanel Grid.Row="0" VerticalAlignment="Center">

                            <!-- Action Buttons (Right Aligned) -->

                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4">

                                <!-- Legality Check -->

                                <Button Background="Transparent" 

                                        BorderThickness="0" 

                                        Padding="4"

                                        Command="{Binding ShowLegalityCommand}"

                                        ToolTip.Tip="{Binding LegalityReport}">

                                    <Panel>

                                        <Border Classes="badge-success" IsVisible="{Binding IsLegal}" Padding="6,2" CornerRadius="4">

                                            <TextBlock Text="LEGAL" FontSize="10" FontWeight="Bold" Foreground="White"/>

                                        </Border>

                                        <Border Classes="badge-error" IsVisible="{Binding !IsLegal}" Padding="6,2" CornerRadius="4">

                                            <TextBlock Text="ILLEGAL" FontSize="10" FontWeight="Bold" Foreground="White"/>

                                        </Border>

                                    </Panel>

                                </Button>

                                

                                <!-- Shiny Toggle -->

                                <Button Background="Transparent" 

                                        BorderThickness="0"

                                        Padding="4"

                                        Command="{Binding ToggleShinyCommand}"

                                        ToolTip.Tip="Toggle Shiny">

                                    <Panel>

                                        <Path Data="M 10,0 L 13,7 L 20,7 L 15,12 L 17,19 L 10,15 L 3,19 L 5,12 L 0,7 L 7,7 Z" 

                                              Fill="{DynamicResource ThemeShinyBrush}"

                                              Width="16" Height="16"

                                              IsVisible="{Binding IsShiny}" />

                                        <Path Data="M 10,0 L 13,7 L 20,7 L 15,12 L 17,19 L 10,15 L 3,19 L 5,12 L 0,7 L 7,7 Z" 

                                              Fill="{DynamicResource ThemeTextMutedBrush}"

                                              Opacity="0.3"

                                              Width="16" Height="16"

                                              IsVisible="{Binding !IsShiny}" />

                                    </Panel>

                                </Button>

                            </StackPanel>

    

                            <!-- Title -->

                            <TextBlock Text="{Binding Title}"

                                       FontSize="18"

                                       FontWeight="SemiBold"

                                       VerticalAlignment="Center"

                                       TextTrimming="CharacterEllipsis" />

                        </DockPanel>

    

                        <!-- Bottom: Badges -->

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">

                            <Border Background="{DynamicResource ThemeBackgroundElevatedBrush}" CornerRadius="4" Padding="6,2">

                                <TextBlock Text="{Binding Level, StringFormat='Lv. {0}'}" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>

                            </Border>

                            <Border Background="{DynamicResource ThemeBackgroundElevatedBrush}" CornerRadius="4" Padding="6,2">

                                <TextBlock Text="{Binding IVTotal, StringFormat='IV: {0}'}" FontSize="11" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>

                            </Border>

                            <Border Background="{DynamicResource ThemeBackgroundElevatedBrush}" CornerRadius="4" Padding="6,2">

                                <TextBlock Text="{Binding EVTotal, StringFormat='EV: {0}'}" FontSize="11" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>

                            </Border>

                        </StackPanel>

                    </Grid>

                </Grid>

    

                <!-- Tab Control (Left Placement) -->

                <TabControl Margin="0,0,0,0" TabStripPlacement="Left" Focusable="False">

                    <!-- Main Tab -->

                    <TabItem Header="Main">

                        <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">

                            <StackPanel Spacing="16">

                                <!-- Core Info Card -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="6">
                                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Core Info" FontWeight="Bold" Margin="0,0,0,8" Opacity="0.6" />
                                    
                                    <!-- Species -->
                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Species" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding SpeciesList}"
                                                  SelectedValue="{Binding Species}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>

                                    <!-- Nickname -->
                                    <StackPanel Grid.Row="1" Grid.Column="2">
                                        <TextBlock Text="Nickname" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <TextBox Text="{Binding Nickname}" />
                                    </StackPanel>

                                    <!-- Form -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,12,0,0" IsVisible="{Binding HasForms}">
                                        <TextBlock Text="Form" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding FormList}"
                                                  SelectedValue="{Binding Form}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>

                                    <!-- Gender -->
                                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,12,0,0">
                                        <TextBlock Text="Gender" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding GenderList}"
                                                  SelectedValue="{Binding Gender}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Growth Card -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="6">
                                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Growth" FontWeight="Bold" Margin="0,0,0,8" Opacity="0.6" />

                                    <!-- Level & Exp -->
                                    <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="*,8,*">
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Level" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding Level}" Minimum="1" Maximum="100" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="EXP" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding Exp}" Minimum="0" Maximum="10000000" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                    </Grid>

                                    <!-- Nature -->
                                    <StackPanel Grid.Row="1" Grid.Column="2">
                                        <TextBlock Text="Nature" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding NatureList}"
                                                  SelectedValue="{Binding Nature}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>

                                    <!-- Ability -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,12,0,0">
                                        <TextBlock Text="Ability" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding AbilityList}"
                                                  SelectedValue="{Binding Ability}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                    
                                    <!-- Language -->
                                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,12,0,0">
                                        <TextBlock Text="Language" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding LanguageList}"
                                                  SelectedValue="{Binding Language}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Misc Card -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="12">
                                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Equipment" FontWeight="Bold" Margin="0,0,0,8" Opacity="0.6" />

                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Held Item" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding ItemList}"
                                                  SelectedValue="{Binding HeldItem}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2">
                                        <TextBlock Text="Ball" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding BallList}"
                                                  SelectedValue="{Binding Ball}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Flags -->
                            <CheckBox Content="Is Egg" IsChecked="{Binding IsEgg}" Margin="4,0,0,0" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Stats Tab -->
                <TabItem Header="Stats">
                    <ScrollViewer Padding="4" HorizontalScrollBarVisibility="Disabled">
                        <Border Classes="section-card"
                                CornerRadius="4" Padding="12">
                            <Grid ColumnDefinitions="40,*,*,*,*" RowDefinitions="Auto,4,Auto,Auto,Auto,Auto,Auto,Auto">
                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Stat" FontWeight="Bold" Opacity="0.6" HorizontalAlignment="Left" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Base" FontWeight="Bold" Opacity="0.6" HorizontalAlignment="Center" />
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                                    <TextBlock Text="IVs" FontWeight="Bold" Opacity="0.6" VerticalAlignment="Center" />
                                    <Button Content="Max" Command="{Binding SetMaxIVsCommand}" 
                                            FontSize="10" Padding="4,1" Height="20" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                                    <TextBlock Text="EVs" FontWeight="Bold" Opacity="0.6" VerticalAlignment="Center" />
                                    <Button Content="Clear" Command="{Binding ClearEVsCommand}" 
                                            FontSize="10" Padding="4,1" Height="20" VerticalAlignment="Center" />
                                </StackPanel>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Total" FontWeight="Bold" Opacity="0.6" HorizontalAlignment="Center" />

                                <!-- HP -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="HP" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Base_HP}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding IvHP}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="2" Grid.Column="3" Value="{Binding EvHP}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding Stat_HP}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                <!-- Atk -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Atk" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Base_ATK}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="3" Grid.Column="2" Value="{Binding IvATK}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="3" Grid.Column="3" Value="{Binding EvATK}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding Stat_ATK}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                <!-- Def -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Def" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Base_DEF}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="4" Grid.Column="2" Value="{Binding IvDEF}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="4" Grid.Column="3" Value="{Binding EvDEF}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="4" Grid.Column="4" Text="{Binding Stat_DEF}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                <!-- SpA -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="SpA" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Base_SPA}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="5" Grid.Column="2" Value="{Binding IvSPA}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="5" Grid.Column="3" Value="{Binding EvSPA}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="5" Grid.Column="4" Text="{Binding Stat_SPA}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                <!-- SpD -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="SpD" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Base_SPD}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="6" Grid.Column="2" Value="{Binding IvSPD}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="6" Grid.Column="3" Value="{Binding EvSPD}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="6" Grid.Column="4" Text="{Binding Stat_SPD}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                <!-- Spe -->
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Spe" FontWeight="SemiBold" VerticalAlignment="Center" />
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Base_SPE}" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" />
                                <NumericUpDown Grid.Row="7" Grid.Column="2" Value="{Binding IvSPE}" Minimum="0" Maximum="31" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <NumericUpDown Grid.Row="7" Grid.Column="3" Value="{Binding EvSPE}" Minimum="0" Maximum="252" FormatString="0" ShowButtonSpinner="False" HorizontalAlignment="Stretch" Margin="2" />
                                <TextBlock Grid.Row="7" Grid.Column="4" Text="{Binding Stat_SPE}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </TabItem>

                <!-- Met Tab -->
                <TabItem Header="Met">
                    <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="12">
                            <!-- Origin Game -->
                            <StackPanel>
                                <TextBlock Text="Origin Game" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox ItemsSource="{Binding OriginGameList}"
                                          SelectedValue="{Binding OriginGame}"
                                          SelectedValueBinding="{Binding Value}"
                                          DisplayMemberBinding="{Binding Text}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Met Location -->
                            <StackPanel>
                                <TextBlock Text="Met Location" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox ItemsSource="{Binding MetLocationList}"
                                          SelectedValue="{Binding MetLocation}"
                                          SelectedValueBinding="{Binding Value}"
                                          DisplayMemberBinding="{Binding Text}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Met Level and Date Row -->
                            <Grid ColumnDefinitions="*,8,*" VerticalAlignment="Center">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Met Level" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center" />
                                    <NumericUpDown Value="{Binding MetLevel}" Minimum="0" Maximum="100" FormatString="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" IsVisible="{Binding HasMetDate}">
                                    <TextBlock Text="Met Date" FontWeight="SemiBold" Margin="0,0,0,4" VerticalAlignment="Center" />
                                    <CalendarDatePicker SelectedDate="{Binding MetDate}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>

                            <!-- Egg Location -->
                            <StackPanel>
                                <TextBlock Text="Egg Location" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <ComboBox ItemsSource="{Binding EggLocationList}"
                                          SelectedValue="{Binding EggLocation}"
                                          SelectedValueBinding="{Binding Value}"
                                          DisplayMemberBinding="{Binding Text}"
                                          HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <!-- Egg Date -->
                            <StackPanel>
                                <TextBlock Text="Egg Date" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <CalendarDatePicker SelectedDate="{Binding EggDate}" HorizontalAlignment="Stretch" />
                            </StackPanel>

                            <CheckBox Content="Fateful Encounter" IsChecked="{Binding IsFatefulEncounter}" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Moves Tab -->
                <TabItem Header="Moves">
                    <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16">
                            <!-- Current Moves Section -->
                            <StackPanel Spacing="8">
                                <DockPanel Margin="0,0,0,4">
                                    <TextBlock Text="Current Moves" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
                                    <Button Content="Suggest" Command="{Binding SuggestCurrentMovesCommand}"
                                            HorizontalAlignment="Right" Padding="8,2" FontSize="12" />
                                </DockPanel>
                                
                                <StackPanel Spacing="4">
                                    <!-- Move 1 -->
                                    <Border Classes="section-card" Padding="12">
                                        <Grid RowDefinitions="Auto,12,Auto">
                                            <ComboBox Grid.Row="0" ItemsSource="{Binding MoveList}"
                                                      SelectedValue="{Binding Move1}" SelectedValueBinding="{Binding Value}"
                                                      DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                            
                                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,8,Auto,*">
                                                <TextBlock Grid.Column="0" Text="PP" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="1" Value="{Binding Pp1}" Minimum="0" Maximum="64" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="3" Text="Ups" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="4" Value="{Binding PpUps1}" Minimum="0" Maximum="3" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <!-- Move 2 -->
                                    <Border Classes="section-card" Padding="12">
                                        <Grid RowDefinitions="Auto,12,Auto">
                                            <ComboBox Grid.Row="0" ItemsSource="{Binding MoveList}"
                                                      SelectedValue="{Binding Move2}" SelectedValueBinding="{Binding Value}"
                                                      DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                            
                                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,8,Auto,*">
                                                <TextBlock Grid.Column="0" Text="PP" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="1" Value="{Binding Pp2}" Minimum="0" Maximum="64" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="3" Text="Ups" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="4" Value="{Binding PpUps2}" Minimum="0" Maximum="3" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <!-- Move 3 -->
                                    <Border Classes="section-card" Padding="12">
                                        <Grid RowDefinitions="Auto,12,Auto">
                                            <ComboBox Grid.Row="0" ItemsSource="{Binding MoveList}"
                                                      SelectedValue="{Binding Move3}" SelectedValueBinding="{Binding Value}"
                                                      DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                            
                                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,8,Auto,*">
                                                <TextBlock Grid.Column="0" Text="PP" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="1" Value="{Binding Pp3}" Minimum="0" Maximum="64" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="3" Text="Ups" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="4" Value="{Binding PpUps3}" Minimum="0" Maximum="3" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <!-- Move 4 -->
                                    <Border Classes="section-card" Padding="12">
                                        <Grid RowDefinitions="Auto,12,Auto">
                                            <ComboBox Grid.Row="0" ItemsSource="{Binding MoveList}"
                                                      SelectedValue="{Binding Move4}" SelectedValueBinding="{Binding Value}"
                                                      DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                            
                                            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,8,Auto,*">
                                                <TextBlock Grid.Column="0" Text="PP" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="1" Value="{Binding Pp4}" Minimum="0" Maximum="64" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                
                                                <TextBlock Grid.Column="3" Text="Ups" Margin="0,0,6,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                                <NumericUpDown Grid.Column="4" Value="{Binding PpUps4}" Minimum="0" Maximum="3" FormatString="0" 
                                                             ShowButtonSpinner="False" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Relearn Section -->
                            <!-- Relearn Section -->
                            <StackPanel Spacing="4">
                                <DockPanel>
                                    <TextBlock Text="Relearn Moves" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
                                    <Button Content="Suggest" Command="{Binding SuggestRelearnMovesCommand}"
                                            HorizontalAlignment="Right" Padding="8,2" FontSize="12" />
                                </DockPanel>
                                
                                <Grid ColumnDefinitions="*,8,*" Margin="0,4,0,0">
                                     <TextBlock Grid.Column="0" Text="Move" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}" Margin="4,0,0,0" />
                                     <TextBlock Grid.Column="2" Text="Move" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource ThemeTextSecondaryBrush}" Margin="4,0,0,0" />
                                </Grid>

                                <Grid ColumnDefinitions="*,8,*" RowDefinitions="Auto,4,Auto">
                                    <ComboBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding RelearnMoveDataSource}" SelectedValue="{Binding RelearnMove1}" 
                                              SelectedValueBinding="{Binding Value}" DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    <ComboBox Grid.Row="0" Grid.Column="2" ItemsSource="{Binding RelearnMoveDataSource}" SelectedValue="{Binding RelearnMove2}" 
                                              SelectedValueBinding="{Binding Value}" DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    
                                    <ComboBox Grid.Row="2" Grid.Column="0" ItemsSource="{Binding RelearnMoveDataSource}" SelectedValue="{Binding RelearnMove3}" 
                                              SelectedValueBinding="{Binding Value}" DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    <ComboBox Grid.Row="2" Grid.Column="2" ItemsSource="{Binding RelearnMoveDataSource}" SelectedValue="{Binding RelearnMove4}" 
                                              SelectedValueBinding="{Binding Value}" DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                </Grid>
                            </StackPanel>

                            <!-- Tech Records (Gen 8+) -->
                            <Border IsVisible="{Binding HasTechRecords}" Padding="8,0" Margin="0,8,0,0"
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,1,0,0">
                                <StackPanel Spacing="8" Margin="0,8,0,0">
                                    <TextBlock Text="Tech Records (TMs/TRs)" FontWeight="SemiBold" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button Content="Open Editor" Command="{Binding OpenTechRecordEditorCommand}" />
                                        <Button Content="Set All Legal" Command="{Binding SetAllTechRecordsCommand}" />
                                        <Button Content="Clear All" Command="{Binding ClearTechRecordsCommand}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- OT/Misc Tab -->
                <TabItem Header="OT/Misc">
                    <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16">
                            <!-- Original Trainer Card -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="12">
                                <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Original Trainer" FontWeight="Bold" Margin="0,0,0,8" Opacity="0.6" />
                                    
                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <TextBox Text="{Binding OriginalTrainerName}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2">
                                        <TextBlock Text="Gender" FontWeight="SemiBold" Margin="0,0,0,4" />
                                        <ComboBox ItemsSource="{Binding GenderList}"
                                                  SelectedValue="{Binding OriginalTrainerGender}" SelectedValueBinding="{Binding Value}"
                                                  DisplayMemberBinding="{Binding Text}" HorizontalAlignment="Stretch" />
                                    </StackPanel>

                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="*,16,*" Margin="0,12,0,0">
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="TID" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding TrainerID}" Minimum="0" Maximum="4294967295" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="SID" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding Sid}" Minimum="0" Maximum="65535" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Extra Info Card -->
                            <Border Classes="section-card" CornerRadius="4" Padding="12">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Encryption &amp; Status" FontWeight="Bold" Opacity="0.6" />
                                    
                                    <UniformGrid Columns="2">
                                        <StackPanel Margin="0,0,4,0">
                                            <TextBlock Text="PID" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <TextBox Text="{Binding Pid}" FontFamily="Consolas" Height="32" VerticalContentAlignment="Center" />
                                        </StackPanel>
                                        <StackPanel Margin="4,0,0,0">
                                            <TextBlock Text="EC" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <TextBox Text="{Binding EncryptionConstant}" FontFamily="Consolas" Height="32" VerticalContentAlignment="Center" />
                                        </StackPanel>
                                    </UniformGrid>

                                    <Grid ColumnDefinitions="*,8,*,8,*">
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="EXP" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding Exp}" Minimum="0" Maximum="16400000" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Friendship" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding Happiness}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="PKRS" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <Grid ColumnDefinitions="*,2,*">
                                                <NumericUpDown Grid.Column="0" Value="{Binding PkrsDays}" Minimum="0" Maximum="15" FormatString="0" ShowButtonSpinner="False" />
                                                <NumericUpDown Grid.Column="2" Value="{Binding PkrsStrain}" Minimum="0" Maximum="15" FormatString="0" ShowButtonSpinner="False" />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Markings -->
                            <Border IsVisible="{Binding HasMarkings}" Classes="section-card"
                                    CornerRadius="4" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Markings" FontWeight="Bold" Margin="0,0,0,8" Opacity="0.6" />
                                    <UniformGrid Columns="6">
                                        <CheckBox Content="●" IsChecked="{Binding MarkingCircle}" ToolTip.Tip="Circle" FontSize="16" HorizontalAlignment="Center" />
                                        <CheckBox Content="▲" IsChecked="{Binding MarkingTriangle}" ToolTip.Tip="Triangle" FontSize="16" HorizontalAlignment="Center" />
                                        <CheckBox Content="■" IsChecked="{Binding MarkingSquare}" ToolTip.Tip="Square" FontSize="16" HorizontalAlignment="Center" />
                                        <CheckBox Content="♥" IsChecked="{Binding MarkingHeart}" ToolTip.Tip="Heart" FontSize="16" HorizontalAlignment="Center" />
                                        <CheckBox Content="★" IsChecked="{Binding MarkingStar}" ToolTip.Tip="Star" FontSize="16" IsVisible="{Binding HasSixMarkings}" HorizontalAlignment="Center" />
                                        <CheckBox Content="◆" IsChecked="{Binding MarkingDiamond}" ToolTip.Tip="Diamond" FontSize="16" IsVisible="{Binding HasSixMarkings}" HorizontalAlignment="Center" />
                                    </UniformGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Contest Tab -->
                <TabItem Header="Contest" IsVisible="{Binding HasContestStats}">
                    <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">
                         <Border Classes="section-card"
                                CornerRadius="4" Padding="12">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Contest Stats" FontWeight="Bold" FontSize="16" Opacity="0.6" />
                                <UniformGrid Columns="2" Rows="3">
                                    <StackPanel Margin="0,0,8,12">
                                        <TextBlock Text="Cool" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestCool}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                    <StackPanel Margin="8,0,0,12">
                                        <TextBlock Text="Beauty" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestBeauty}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                    
                                    <StackPanel Margin="0,0,8,12">
                                        <TextBlock Text="Cute" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestCute}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                    <StackPanel Margin="8,0,0,12">
                                        <TextBlock Text="Smart" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestSmart}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                    
                                    <StackPanel Margin="0,0,8,0">
                                        <TextBlock Text="Tough" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestTough}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                    <StackPanel Margin="8,0,0,0">
                                        <TextBlock Text="Sheen" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <NumericUpDown Value="{Binding ContestSheen}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </TabItem>

                <!-- Memory Tab -->
                <TabItem Header="Memory" IsVisible="{Binding HasMemories}">
                    <ScrollViewer Padding="8" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16">
                            <Button Content="Advanced / Affection Editor..." Command="{Binding OpenMemoryEditorCommand}" HorizontalAlignment="Right" />
                            <!-- OT Memory -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="12">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Original Trainer Memory" FontWeight="Bold" Opacity="0.6" />
                                    <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto">
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="Memory" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding OtMemory}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Text="Intensity" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding OtMemoryIntensity}" Minimum="0" Maximum="7" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                                            <TextBlock Text="Feeling" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding OtMemoryFeeling}" Minimum="0" Maximum="24" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,12,0,0">
                                            <TextBlock Text="Variable" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding OtMemoryVariable}" Minimum="0" Maximum="65535" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- HT Memory -->
                            <Border Classes="section-card"
                                    CornerRadius="4" Padding="12">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Handling Trainer Memory" FontWeight="Bold" Opacity="0.6" />
                                    <Grid ColumnDefinitions="*,16,*" RowDefinitions="Auto,Auto">
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="Memory" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding HtMemory}" Minimum="0" Maximum="255" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Text="Intensity" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding HtMemoryIntensity}" Minimum="0" Maximum="7" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                                            <TextBlock Text="Feeling" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding HtMemoryFeeling}" Minimum="0" Maximum="24" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,12,0,0">
                                            <TextBlock Text="Variable" FontWeight="SemiBold" Margin="0,0,0,4" />
                                            <NumericUpDown Value="{Binding HtMemoryVariable}" Minimum="0" Maximum="65535" FormatString="0" ShowButtonSpinner="False" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Ribbons Tab -->
                <TabItem Header="Ribbons" IsVisible="{Binding HasRibbons}">
                    <ScrollViewer Padding="12" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16">
                            <!-- Header with buttons -->
                            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,4">
                                <TextBlock Text="{Binding RibbonCount, StringFormat='Ribbons ({0})'}" 
                                           FontWeight="Bold" FontSize="16" VerticalAlignment="Center" />
                                <Button Grid.Column="1" Content="Advanced..." Command="{Binding OpenRibbonEditorCommand}" Margin="0,0,8,0" Padding="8,4" FontSize="12" />
                                <Button Grid.Column="2" Content="Clear All" Command="{Binding ClearRibbonsCommand}" Padding="8,4" FontSize="12" />
                            </Grid>
                            
                            <!-- Ribbon Grid -->
                            <ItemsControl ItemsSource="{Binding Ribbons}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="72" Height="90" Margin="0,0,8,8" 
                                                Classes="card"
                                                ToolTip.Tip="{Binding DisplayName}">
                                            <Grid RowDefinitions="*,Auto,Auto" Margin="4">
                                                <!-- Icon -->
                                                <Image Grid.Row="0" Source="{Binding Icon}" 
                                                       Height="40" Width="40" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       RenderOptions.BitmapInterpolationMode="HighQuality" />
                                                
                                                <!-- Name (Truncated) -->
                                                <TextBlock Grid.Row="1" Text="{Binding DisplayName}" 
                                                           FontSize="10" TextTrimming="CharacterEllipsis" 
                                                           HorizontalAlignment="Center" Margin="0,4,0,4"
                                                           Opacity="0.8"/>
                                                
                                                <!-- Control -->
                                                <Panel Grid.Row="2" Height="20">
                                                    <!-- Boolean: Checkbox -->
                                                    <CheckBox IsVisible="{Binding IsBooleanRibbon}"
                                                              IsChecked="{Binding HasRibbon}"
                                                              HorizontalAlignment="Center" />
                                                    
                                                    <!-- Count: Numeric -->
                                                    <NumericUpDown IsVisible="{Binding !IsBooleanRibbon}"
                                                                   Value="{Binding RibbonCount}" 
                                                                   Minimum="0" Maximum="{Binding MaxCount}" 
                                                                   FormatString="0"
                                                                   ShowButtonSpinner="False"
                                                                   Classes="condensed"
                                                                   HorizontalAlignment="Stretch"
                                                                   HorizontalContentAlignment="Center"
                                                                   Height="20" />
                                                </Panel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Border>
</UserControl>
