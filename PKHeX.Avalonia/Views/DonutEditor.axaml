<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.DonutEditor"
             x:DataType="vm:DonutEditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <!-- Not supported message -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Donut Editor not available"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
                <TextBlock Text="This save type does not support Donut Editor (PLZA only)."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Main content -->
            <DockPanel IsVisible="{Binding IsSupported}">
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Donut Editor (PLZA)" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Randomize All" Command="{Binding RandomizeAllCommand}" />
                        <Button Content="Clone Current" Command="{Binding CloneCurrentCommand}" />
                        <Button Content="Shiny Assortment" Command="{Binding ShinyAssortmentCommand}" />
                        <Button Content="Compress" Command="{Binding CompressCommand}" />
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                    </StackPanel>
                </DockPanel>

                <Grid ColumnDefinitions="250,16,*">
                    <!-- Donut List -->
                    <ListBox Grid.Column="0"
                             ItemsSource="{Binding Donuts}"
                             SelectedItem="{Binding SelectedDonut}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:DonutEntryViewModel">
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Editor -->
                    <ScrollViewer Grid.Column="2">
                        <StackPanel Spacing="16" DataContext="{Binding SelectedDonut}">
                            <Border Classes="section-card" Padding="12" CornerRadius="4">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="General Stats" FontWeight="SemiBold" />
                                    <Grid ColumnDefinitions="Auto,8,*,16,Auto,8,*" RowDefinitions="Auto,8,Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Stars:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="0" Grid.Column="2" Value="{Binding Stars}" Minimum="0" Maximum="5" />

                                        <TextBlock Grid.Row="0" Grid.Column="4" Text="Calories:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="0" Grid.Column="6" Value="{Binding Calories}" Minimum="0" Maximum="9999" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Level Boost:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding LevelBoost}" Minimum="0" Maximum="255" />

                                        <TextBlock Grid.Row="2" Grid.Column="4" Text="Type:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="2" Grid.Column="6" Value="{Binding DonutType}" Minimum="0" Maximum="65535" />
                                    </Grid>
                                    <Button Content="Recalculate Stats from Berries" Command="{Binding RecalculateCommand}" HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </Border>

                            <Border Classes="section-card" Padding="12" CornerRadius="4">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Berries" FontWeight="SemiBold" />
                                    <Grid ColumnDefinitions="*,8,*" RowDefinitions="Auto,4,Auto,4,Auto,4,Auto,8,Auto">
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="Berry 1" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry1}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Text="Berry 2" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry2}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Text="Berry 3" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry3}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="2">
                                            <TextBlock Text="Berry 4" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry4}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="4" Grid.Column="0">
                                            <TextBlock Text="Berry 5" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry5}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="4" Grid.Column="2">
                                            <TextBlock Text="Berry 6" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry6}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="6" Grid.Column="0">
                                            <TextBlock Text="Berry 7" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry7}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="6" Grid.Column="2">
                                            <TextBlock Text="Berry 8" FontSize="12" />
                                            <NumericUpDown Value="{Binding Berry8}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3">
                                            <TextBlock Text="Berry Name (Display)" FontSize="12" />
                                            <NumericUpDown Value="{Binding BerryName}" Minimum="0" Maximum="65535" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Classes="section-card" Padding="12" CornerRadius="4">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Flavors" FontWeight="SemiBold" />
                                    <StackPanel Spacing="8">
                                        <Grid ColumnDefinitions="*,120">
                                            <TextBlock Text="{Binding Flavor0Name}" VerticalAlignment="Center" />
                                            <TextBox Grid.Column="1" Text="{Binding Flavor0, StringFormat='X16'}" />
                                        </Grid>
                                        <Grid ColumnDefinitions="*,120">
                                            <TextBlock Text="{Binding Flavor1Name}" VerticalAlignment="Center" />
                                            <TextBox Grid.Column="1" Text="{Binding Flavor1, StringFormat='X16'}" />
                                        </Grid>
                                        <Grid ColumnDefinitions="*,120">
                                            <TextBlock Text="{Binding Flavor2Name}" VerticalAlignment="Center" />
                                            <TextBox Grid.Column="1" Text="{Binding Flavor2, StringFormat='X16'}" />
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
