<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.SecretBase3Editor"
             x:DataType="vm:SecretBase3EditorViewModel">

    <Design.DataContext>
        <vm:SecretBase3EditorViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <Grid ColumnDefinitions="200,*">
            <!-- Base List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Secret Bases" FontWeight="Bold" Margin="0,0,0,5" />
                    <ListBox ItemsSource="{Binding Bases}" SelectedItem="{Binding SelectedBase}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:SecretBase3ViewModel">
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Base Details -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                <StackPanel Spacing="8" DataContext="{Binding SelectedBase}">
                    <TextBlock Text="Trainer Info" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,10,5" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" MaxLength="7" Margin="0,0,0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="TID:" VerticalAlignment="Center" Margin="0,0,10,5" />
                        <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding Tid}" Minimum="0" Maximum="65535" Margin="0,0,0,5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="SID:" VerticalAlignment="Center" Margin="0,0,10,5" />
                        <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding Sid}" Minimum="0" Maximum="65535" Margin="0,0,0,5" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Times Entered:" VerticalAlignment="Center" Margin="0,0,10,5" />
                        <NumericUpDown Grid.Row="3" Grid.Column="1" Value="{Binding TimesEntered}" Minimum="0" Maximum="255" Margin="0,0,0,5" />

                        <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Battled Today" IsChecked="{Binding BattledToday}" Margin="0,0,0,5" />
                        <CheckBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="Registered" IsChecked="{Binding Registered}" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
