<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.SecretBaseEditor"
             x:DataType="vm:SecretBaseEditorViewModel">

    <Border Padding="16" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <Panel>
            <!-- Not supported message -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Secret Bases not available"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
                <TextBlock Text="This save type does not support Secret Bases (Gen 3 RSE only)."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Main content -->
            <DockPanel IsVisible="{Binding IsSupported}">
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Secret Base Editor (Gen 3)" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="12,6" />
                        <Button Content="Save Changes" Command="{Binding SaveCommand}" Padding="12,6" Classes="accent" />
                    </StackPanel>
                </DockPanel>

                <!-- Content -->
                <Grid ColumnDefinitions="200,16,*">
                    <!-- Base List -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="4">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Secret Bases" FontWeight="SemiBold" Margin="8" />
                            <ListBox ItemsSource="{Binding Bases}"
                                     SelectedItem="{Binding SelectedBase}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="vm:SecretBaseViewModel">
                                        <StackPanel Orientation="Horizontal" Margin="4">
                                            <TextBlock Text="{Binding GenderSymbol}" Width="16" />
                                            <TextBlock Text="{Binding DisplayName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Border>

                    <!-- Selected Base Details -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="4"
                            Padding="16"
                            IsVisible="{Binding SelectedBase, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding SelectedBase}" Spacing="16">
                                <!-- Trainer Info -->
                                <TextBlock Text="Trainer Info" FontWeight="SemiBold" FontSize="14" />
                                <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto,8,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" />
                                    <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding TrainerName}" MaxLength="7" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="TID:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding Tid}" Minimum="0" Maximum="65535" />

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="SID:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="4" Grid.Column="2" Value="{Binding Sid}" Minimum="0" Maximum="65535" />

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Times Entered:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="6" Grid.Column="2" Value="{Binding TimesEntered}" Minimum="0" Maximum="255" />

                                    <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="16">
                                        <CheckBox Content="Battled Today" IsChecked="{Binding BattledToday}" />
                                        <CheckBox Content="Registered" IsChecked="{Binding Registered}" />
                                    </StackPanel>
                                </Grid>

                                <Separator Margin="0,8" />

                                <!-- Team -->
                                <TextBlock Text="Team" FontWeight="SemiBold" FontSize="14" />
                                <ItemsControl ItemsSource="{Binding $parent[UserControl].((vm:SecretBaseEditorViewModel)DataContext).TeamMembers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:SecretBaseTeamMemberViewModel">
                                            <Border Margin="4" Padding="8" CornerRadius="4"
                                                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                                    Width="100">
                                                <StackPanel>
                                                    <Image Source="{Binding Sprite}"
                                                           Width="68" Height="56"
                                                           HorizontalAlignment="Center" />
                                                    <TextBlock Text="{Binding SpeciesName}"
                                                               FontSize="10"
                                                               TextTrimming="CharacterEllipsis"
                                                               HorizontalAlignment="Center" />
                                                    <TextBlock Text="{Binding Level, StringFormat='Lv. {0}'}"
                                                               FontSize="10"
                                                               Opacity="0.7"
                                                               HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- No selection message -->
                    <TextBlock Grid.Column="2"
                               Text="Select a Secret Base to view details"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.5"
                               IsVisible="{Binding SelectedBase, Converter={x:Static ObjectConverters.IsNull}}" />
                </Grid>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
