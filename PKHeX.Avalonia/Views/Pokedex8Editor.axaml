<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             xmlns:core="clr-namespace:PKHeX.Core;assembly=PKHeX.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PKHeX.Avalonia.Views.Pokedex8Editor"
             x:DataType="vm:Pokedex8EditorViewModel">
    
    <Grid ColumnDefinitions="250,*" RowDefinitions="*,Auto">
        <!-- Species List -->
        <Grid Grid.Column="0" RowDefinitions="Auto,*">
            <TextBox Grid.Row="0" Text="{Binding SearchText}" Watermark="Search..." Margin="0,0,0,5"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding FilteredSpecies}" SelectedItem="{Binding SelectedSpecies}">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="core:ComboItem">
                        <TextBlock Text="{Binding Text}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <!-- Editor Area -->
        <ScrollViewer Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
            <StackPanel Spacing="10">
                <!-- General Settings -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="5">
                        <TextBlock Text="General" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <CheckBox IsChecked="{Binding Caught}" Content="Caught"/>
                            <CheckBox IsChecked="{Binding CaughtGigantamax}" Content="Caught GMax"/>
                            <CheckBox IsChecked="{Binding CaughtGigantamax1}" Content="Caught GMax (RS)" IsVisible="{Binding IsUrshifu}"/>
                        </StackPanel>
                        
                        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" Margin="0,5,0,0">
                            <Label Grid.Row="0" Grid.Column="0" Content="Battled Count:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding BattledCount}" Minimum="0" Maximum="999999" Increment="1"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Display Settings -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="5">
                         <TextBlock Text="Display Settings" FontWeight="Bold"/>
                         <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto">
                             <Label Grid.Row="0" Grid.Column="0" Content="Gender:" VerticalAlignment="Center"/>
                             <ComboBox Grid.Row="0" Grid.Column="1" SelectedIndex="{Binding DisplayGender}" HorizontalAlignment="Stretch" Margin="5,0">
                                 <ComboBoxItem>Male</ComboBoxItem>
                                 <ComboBoxItem>Female</ComboBoxItem>
                                 <ComboBoxItem>Genderless</ComboBoxItem>
                             </ComboBox>

                             <Label Grid.Row="0" Grid.Column="2" Content="Form:" VerticalAlignment="Center"/>
                             <NumericUpDown Grid.Row="0" Grid.Column="3" Value="{Binding DisplayForm}" Minimum="0" Maximum="255" Margin="5,0"/>

                             <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" IsChecked="{Binding DisplayShiny}" Content="Show Shiny"/>
                             <CheckBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" IsChecked="{Binding DisplayDynamax}" Content="Show Dynamax"/>
                         </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Languages -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Languages" FontWeight="Bold"/>
                        <WrapPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding LangJapanese}" Content="JPN" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangEnglish}" Content="ENG" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangFrench}" Content="FRE" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangItalian}" Content="ITA" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangGerman}" Content="GER" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangSpanish}" Content="SPA" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangKorean}" Content="KOR" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangChineseS}" Content="CHS" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding LangChineseT}" Content="CHT" Margin="0,0,10,0"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Forms -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Forms (Seen Flags)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid ColumnDefinitions="120,60,60,60,60" Margin="0,0,0,5">
                            <TextBlock Grid.Column="0" Text="Form" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Male" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Fem" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="ShinyM" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="ShinyF" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding Forms}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:Pokedex8FormViewModel">
                                    <Grid ColumnDefinitions="120,60,60,60,60" Margin="0,2">
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        <CheckBox Grid.Column="1" IsChecked="{Binding SeenMale}" HorizontalAlignment="Center"/>
                                        <CheckBox Grid.Column="2" IsChecked="{Binding SeenFemale}" HorizontalAlignment="Center"/>
                                        <CheckBox Grid.Column="3" IsChecked="{Binding SeenShinyMale}" HorizontalAlignment="Center"/>
                                        <CheckBox Grid.Column="4" IsChecked="{Binding SeenShinyFemale}" HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Button Command="{Binding SeenAllCommand}" Content="Seen All"/>
            <Button Command="{Binding CaughtAllCommand}" Content="Caught All"/>
            <Button Command="{Binding CompleteDexCommand}" Content="Complete Dex"/>
        </StackPanel>
    </Grid>
</UserControl>