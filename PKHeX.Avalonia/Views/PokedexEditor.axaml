<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.PokedexEditor"
             x:DataType="vm:PokedexEditorViewModel">

    <Border Padding="16" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <DockPanel>
            <!-- Header -->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                <TextBlock Text="PokÃ©dex" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button Content="Reset" Command="{Binding ResetCommand}" Padding="12,6" />
                    <Button Content="Apply" Command="{Binding SaveCommand}" Classes="accent" Padding="12,6" />
                </StackPanel>
            </DockPanel>

            <!-- Toolbar -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <Button Content="Set All Seen" Command="{Binding SetAllSeenCommand}" Padding="8,4" />
                <Button Content="Set All Caught" Command="{Binding SetAllCaughtCommand}" Padding="8,4" />
                <Button Content="Clear All" Command="{Binding ClearAllCommand}" Padding="8,4" />
                <Separator Margin="8,0" />
                <TextBox Text="{Binding SearchText}"
                         Watermark="Search..."
                         Width="200" />
            </StackPanel>

            <!-- Entries List -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding FilteredEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:PokedexEntryViewModel">
                                <Border Padding="8,6"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}">
                                    <Grid ColumnDefinitions="60,*,80,80">
                                        <!-- Species # -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Species, StringFormat='#{0:000}'}"
                                                   VerticalAlignment="Center"
                                                   Opacity="0.7" />

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold" />

                                        <!-- Seen -->
                                        <CheckBox Grid.Column="2"
                                                  IsChecked="{Binding IsSeen}"
                                                  Content="Seen"
                                                  VerticalAlignment="Center" />

                                        <!-- Caught -->
                                        <CheckBox Grid.Column="3"
                                                  IsChecked="{Binding IsCaught}"
                                                  Content="Caught"
                                                  VerticalAlignment="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Border>
</UserControl>
