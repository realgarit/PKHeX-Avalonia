<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.UndergroundEditor"
             x:DataType="vm:UndergroundEditorViewModel">

    <Border Padding="16" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <Panel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Underground not available" FontSize="18" HorizontalAlignment="Center" Opacity="0.7" />
                <TextBlock Text="This feature is only available for Diamond/Pearl/Platinum." HorizontalAlignment="Center" Opacity="0.5" Margin="0,8,0,0" />
            </StackPanel>

            <DockPanel IsVisible="{Binding IsSupported}">
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Underground Editor (Gen 4)" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right" Padding="12,6" />
                </DockPanel>

                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="4" Padding="16">
                    <ScrollViewer>
                        <Grid ColumnDefinitions="*,16,*">
                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Social Stats" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Players Met:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding PlayersMet}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Gifts Given:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding GiftsGiven}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Gifts Received:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="4" Grid.Column="1" Value="{Binding GiftsReceived}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Helped Others:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="6" Grid.Column="1" Value="{Binding HelpedOthers}" Minimum="0" Maximum="999999" />
                                </Grid>

                                <TextBlock Text="Mining Stats" FontWeight="SemiBold" FontSize="14" Margin="0,16,0,8" />

                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,8,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Spheres Buried:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding SpheresBuried}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Fossils Dug Up:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding FossilsDugUp}" Minimum="0" Maximum="999999" />
                                </Grid>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Trap Stats" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" />

                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,8,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Traps (Others):" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding TrapsTriggeredOthers}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Traps (Self):" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding TrapsTriggeredSelf}" Minimum="0" Maximum="999999" />
                                </Grid>

                                <TextBlock Text="Flag Stats" FontWeight="SemiBold" FontSize="14" Margin="0,16,0,8" />

                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto,8,Auto">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Base Moved:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding BaseMoved}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Flags Obtained:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding FlagsObtained}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="My Flag Taken:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="4" Grid.Column="1" Value="{Binding MyFlagTaken}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Flag Recovered:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="6" Grid.Column="1" Value="{Binding MyFlagRecovered}" Minimum="0" Maximum="999999" />

                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Flags Captured:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="8" Grid.Column="1" Value="{Binding FlagsCaptured}" Minimum="0" Maximum="999999" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
