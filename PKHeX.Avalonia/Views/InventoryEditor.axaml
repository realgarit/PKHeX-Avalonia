<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.InventoryEditor"
             x:DataType="vm:InventoryEditorViewModel">

    <Border Padding="16" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <DockPanel>
            <!-- Header -->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                <TextBlock Text="Inventory" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button Content="Reset" Command="{Binding ResetCommand}" Padding="12,6" />
                    <Button Content="Apply" Command="{Binding SaveCommand}" Classes="accent" Padding="12,6" />
                </StackPanel>
            </DockPanel>

            <!-- Pouch Tabs -->
            <TabControl ItemsSource="{Binding Pouches}"
                        SelectedItem="{Binding SelectedPouch}">
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="vm:InventoryPouchViewModel">
                        <TextBlock Text="{Binding PouchName}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="vm:InventoryPouchViewModel">
                        <DockPanel>
                            <!-- Toolbar -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                <Button Content="Sort by Name"
                                        Command="{Binding $parent[TabControl].((vm:InventoryEditorViewModel)DataContext).SortByNameCommand}"
                                        Padding="8,4" />
                                <Button Content="Sort by Count"
                                        Command="{Binding $parent[TabControl].((vm:InventoryEditorViewModel)DataContext).SortByCountCommand}"
                                        Padding="8,4" />
                                <Separator />
                                <Button Content="Give All"
                                        Command="{Binding $parent[TabControl].((vm:InventoryEditorViewModel)DataContext).GiveAllCommand}"
                                        Padding="8,4" />
                                <Button Content="Clear All"
                                        Command="{Binding $parent[TabControl].((vm:InventoryEditorViewModel)DataContext).ClearAllCommand}"
                                        Padding="8,4" />
                            </StackPanel>

                            <!-- Items List -->
                            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                    CornerRadius="4">
                                <ScrollViewer>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:InventoryItemViewModel">
                                                <Border Padding="8,4"
                                                        BorderThickness="0,0,0,1"
                                                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}">
                                                    <Grid ColumnDefinitions="*,100">
                                                        <!-- Item ComboBox -->
                                                        <ComboBox Grid.Column="0"
                                                                  ItemsSource="{Binding ItemList}"
                                                                  SelectedValue="{Binding ItemId}"
                                                                  SelectedValueBinding="{Binding Value}"
                                                                  DisplayMemberBinding="{Binding Text}"
                                                                  HorizontalAlignment="Stretch"
                                                                  Margin="0,0,8,0" />

                                                        <!-- Count -->
                                                        <NumericUpDown Grid.Column="1"
                                                                       Value="{Binding Count}"
                                                                       Minimum="0"
                                                                       Maximum="{Binding MaxCount}"
                                                                       FormatString="0"
                                                                       ShowButtonSpinner="False" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DockPanel>
    </Border>
</UserControl>
