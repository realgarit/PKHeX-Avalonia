<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.RaidEditor"
             x:DataType="vm:RaidEditorViewModel">

    <Border Padding="16" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
        <Panel>
            <!-- Not supported message -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Raids not available"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
                <TextBlock Text="This save type does not support Max Raids (Gen 8 SWSH only)."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Main content -->
            <DockPanel IsVisible="{Binding IsSupported}">
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Max Raid Editor" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Region, StringFormat='({0})'}" FontSize="16" Opacity="0.7" VerticalAlignment="Center" />
                    </StackPanel>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            HorizontalAlignment="Right"
                            Padding="12,6" />
                </DockPanel>

                <!-- Content -->
                <Grid ColumnDefinitions="200,16,*">
                    <!-- Den List -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="4">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" Text="Dens" FontWeight="SemiBold" Margin="8" />
                            <ListBox ItemsSource="{Binding Dens}"
                                     SelectedItem="{Binding SelectedDen}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="vm:RaidViewModel">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding DisplayName}" />
                                            <TextBlock Text="â˜…" Foreground="Gold" IsVisible="{Binding IsActive}" />
                                            <TextBlock Text="E" Foreground="Purple" IsVisible="{Binding IsEvent}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                    </Border>

                    <!-- Selected Den Details -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="4"
                            Padding="16"
                            IsVisible="{Binding SelectedDen, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding SelectedDen}" Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="16" />
                                    <TextBlock Text="(Active)" Foreground="Green" IsVisible="{Binding IsActive}" VerticalAlignment="Center" />
                                    <TextBlock Text="(Inactive)" Foreground="Gray" IsVisible="{Binding !IsActive}" VerticalAlignment="Center" />
                                </StackPanel>

                                <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto,8,Auto,8,Auto,8,Auto">
                                    <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                              Content="Event Raid" IsChecked="{Binding IsEvent}" />

                                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                              Content="Rare Raid" IsChecked="{Binding IsRare}" />

                                    <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                                              Content="Wishing Piece Used" IsChecked="{Binding IsWishingPiece}" />

                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Seed (Hex):" VerticalAlignment="Center" />
                                    <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding SeedHex}" MaxLength="16" />

                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Stars:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="8" Grid.Column="2" Value="{Binding Stars}" Minimum="0" Maximum="5" />

                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Rand Roll:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="10" Grid.Column="2" Value="{Binding RandRoll}" Minimum="0" Maximum="255" />

                                    <TextBlock Grid.Row="12" Grid.Column="0" Text="Flags:" VerticalAlignment="Center" />
                                    <NumericUpDown Grid.Row="12" Grid.Column="2" Value="{Binding Flags}" Minimum="0" Maximum="255" />
                                </Grid>

                                <Button Content="Deactivate Den" Command="{Binding DeactivateCommand}" />
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- No selection message -->
                    <TextBlock Grid.Column="2"
                               Text="Select a Den to view details"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.5"
                               IsVisible="{Binding SelectedDen, Converter={x:Static ObjectConverters.IsNull}}" />
                </Grid>
            </DockPanel>
        </Panel>
    </Border>
</UserControl>
