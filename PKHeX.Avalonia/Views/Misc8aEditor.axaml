<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.Misc8aEditor"
             x:DataType="vm:Misc8aEditorViewModel">

    <Design.DataContext>
        <vm:Misc8aEditorViewModel />
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <ScrollViewer>
            <StackPanel Spacing="15" Margin="10">
                <!-- Currency -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Currency" FontWeight="Bold" FontSize="14" />
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Money:" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Money}" Minimum="0" Maximum="9999999" Margin="0,0,10,5" />
                            <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxMoneyCommand}" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Merit (Current):" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding MeritCurrent}" Minimum="0" Maximum="9999999" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Merit (Earned):" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <NumericUpDown Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding MeritEarned}" Minimum="0" Maximum="9999999" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Expedition Team -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Survey Corps" FontWeight="Bold" FontSize="14" />
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Expedition Rank:" VerticalAlignment="Center" Margin="0,0,10,5" />
                            <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Rank}" Minimum="0" Maximum="10" Margin="0,0,10,5" />
                            <Button Grid.Row="0" Grid.Column="2" Content="Max" Command="{Binding MaxRankCommand}" Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Satchel Upgrades:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding SatchelUpgrades}" Minimum="0" Maximum="37" Margin="0,0,10,0" />
                            <Button Grid.Row="1" Grid.Column="2" Content="Max" Command="{Binding MaxSatchelCommand}" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
