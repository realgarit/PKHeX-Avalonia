<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.BattlePassEditor"
             x:DataType="vm:BattlePassEditorViewModel">

    <Border Padding="16" Classes="view-container">
        <Panel>
            <!-- Not supported message -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsVisible="{Binding !IsSupported}">
                <TextBlock Text="Battle Pass Editor not available"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Opacity="0.7" />
                <TextBlock Text="This save type does not support Battle Pass Editor (PBR only)."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Main content -->
            <DockPanel IsVisible="{Binding IsSupported}">
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Battle Pass Editor (PBR)" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Unlock All" Command="{Binding UnlockAllCommand}" />
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                    </StackPanel>
                </DockPanel>

                <Grid ColumnDefinitions="250,16,*">
                    <!-- Pass List -->
                    <ListBox Grid.Column="0"
                             ItemsSource="{Binding Passes}"
                             SelectedItem="{Binding SelectedPass}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:BattlePassEntryViewModel">
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Editor -->
                    <TabControl Grid.Column="2" DataContext="{Binding SelectedPass}">
                        <TabItem Header="Trainer">
                            <ScrollViewer>
                                <StackPanel Spacing="16" Margin="0,12,0,0">
                                    <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto,8,Auto,8,Auto,8,Auto,8,Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" />
                                        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding Name}" MaxLength="12" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="TID:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding Tid}" Minimum="0" Maximum="65535" />

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="SID:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="4" Grid.Column="2" Value="{Binding Sid}" Minimum="0" Maximum="65535" />

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Model:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="6" Grid.Column="2" Value="{Binding Model}" Minimum="0" Maximum="255" />

                                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Skin:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="8" Grid.Column="2" Value="{Binding Skin}" Minimum="0" Maximum="255" />
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Phrases">
                            <ScrollViewer>
                                <StackPanel Spacing="16" Margin="0,12,0,0">
                                    <TextBlock Text="Greeting" FontSize="12" Opacity="0.7" />
                                    <TextBox Text="{Binding Greeting}" AcceptsReturn="True" Height="60" />

                                    <TextBlock Text="Sent Out" FontSize="12" Opacity="0.7" />
                                    <TextBox Text="{Binding SentOut}" AcceptsReturn="True" Height="60" />

                                    <TextBlock Text="Win" FontSize="12" Opacity="0.7" />
                                    <TextBox Text="{Binding Win}" AcceptsReturn="True" Height="60" />

                                    <TextBlock Text="Lose" FontSize="12" Opacity="0.7" />
                                    <TextBox Text="{Binding Lose}" AcceptsReturn="True" Height="60" />
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Records">
                            <ScrollViewer>
                                <StackPanel Spacing="16" Margin="0,12,0,0">
                                    <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Battles:" VerticalAlignment="Center" />
                                        <NumericUpDown Grid.Row="0" Grid.Column="2" Value="{Binding Battles}" Minimum="0" />
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </DockPanel>
        </Panel>
    </Border>

</UserControl>
