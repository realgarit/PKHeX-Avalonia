<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PKHeX.Avalonia.ViewModels"
             x:Class="PKHeX.Avalonia.Views.GearBREditor"
             x:DataType="vm:GearBREditorViewModel">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>

        <ScrollViewer>
            <StackPanel Spacing="15" Margin="10">
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Gear Unlocks" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" />
                            <Button Content="Unlock All" Command="{Binding UnlockAllCommand}" FontSize="11" Padding="8,4" />
                            <Button Content="Clear All" Command="{Binding ClearAllCommand}" FontSize="11" Padding="8,4" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Shiny PokÃ©mon Outfits" FontWeight="Bold" FontSize="14" />
                        <WrapPanel>
                            <CheckBox Content="Shiny Groudon" IsChecked="{Binding ShinyGroudon}" Margin="0,2,15,2" />
                            <CheckBox Content="Shiny Lucario" IsChecked="{Binding ShinyLucario}" Margin="0,2,15,2" />
                            <CheckBox Content="Shiny Electivire" IsChecked="{Binding ShinyElectivire}" Margin="0,2,15,2" />
                            <CheckBox Content="Shiny Kyogre" IsChecked="{Binding ShinyKyogre}" Margin="0,2,15,2" />
                            <CheckBox Content="Shiny Roserade" IsChecked="{Binding ShinyRoserade}" Margin="0,2,15,2" />
                            <CheckBox Content="Shiny Pachirisu" IsChecked="{Binding ShinyPachirisu}" Margin="0,2,15,2" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
